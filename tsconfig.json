{
  "compilerOptions": {
    "rootDir": "src",
    "lib": ["es2023"],
    "module": "commonjs",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": ["./src", "eslint.config.mjs"],
  "typedocOptions": {
    "entryPoints": ["src/**/*"],
    "out": "docs"
  }
}
